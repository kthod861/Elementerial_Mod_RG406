<theme>
	
	<include>./_inc/systems/metadata-global/_default.xml</include>
	
	<variables>
		<spacerImage>./_inc/images/space.png</spacerImage>
		<fontRegular>./_inc/fonts/Inter-Regular.otf</fontRegular>
		<fontBold>./_inc/fonts/Inter-Bold.otf</fontBold>
		<fontLight>./_inc/fonts/Inter-Light.otf</fontLight>
		<fontHelper>./_inc/fonts/RobotoCondensed-Regular.ttf</fontHelper>
		<mainColor>ED5353</mainColor>
		<onMainColor>FFEBEB</onMainColor>
		<bgColor>000000</bgColor>
		<sectColor>ff8c82</sectColor>
		<fgColor>dcdcdc</fgColor>
		<bgOpacity>0.3</bgOpacity>
	</variables>
	

	<variant name="gamelist-grid-small-classic,gamelist-grid-large-classic">
		<variables>
			<artworkFolder>artwork</artworkFolder>
		</variables>
	</variant>
	
	<!--
	///
	All Views
	///
	-->
	<view name="system,gamelist">
		<helpsystem name="help">
			<origin>0 0.5</origin>
			<pos>0.016666667 0.96</pos>
			<fontSize>${fontSizeBody}</fontSize>
			<fontSizeDimmed>${fontSizeBody}</fontSizeDimmed>
			<fontPath>${fontHelper}</fontPath>
			<iconColor>${sectColor}</iconColor>
			<textColor>${fgColor}</textColor>
			<originDimmed>0.5 0.5</originDimmed>
			<posDimmed>0.5 0.96</posDimmed>
			<textColorDimmed>${fgColor}</textColorDimmed>
			<iconColorDimmed>${sectColor}</iconColorDimmed>
		</helpsystem>
		<image name="background">
			<path>./_inc/images/background.png</path>
			<size>1 1</size>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<tile>true</tile>
			<color>${bgColor}</color>
			<opacity>${bgOpacity}</opacity>
			<zIndex>2</zIndex>
		</image>
	</view>

	<!--
	///
	System View
	///
	-->
	<view name="system">
		<image name="custom_bg_fg">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./_inc/images/carousel-background.png</path>
			<color>${bgColor}</color>
			<zIndex>3</zIndex>
		</image>
		<carousel name="systemcarousel">
			<origin>0.5 0</origin>
			<pos>0.5 0.51</pos>
			<size>1 0.55</size>
			<itemScale>1.80</itemScale>
			<staticImage>./_inc/systems/logos/${system.theme}.png</staticImage>
			<type>horizontal</type>
			<color>${bgColor}00</color>
			<selectedItemMargins>0.1 0.1</selectedItemMargins>
			<fastScrolling>true</fastScrolling>
			<unfocusedItemDimming>0.5</unfocusedItemDimming>
			<reflections>true</reflections>
			<reflectionsOpacity >0.3</reflectionsOpacity >
			<textColor>${fgColor}</textColor>
			<zIndex>4</zIndex>
		</carousel>
        <text name="autoCollectionName">
            <text>${system.fullName.autoCollections}</text>
            <letterCase>capitalize</letterCase>
        </text>
        <text name="customCollectionName">
            <text>${system.fullName.customCollections}</text>
            <letterCase>none</letterCase>
        </text>
		<text name="systemInfo">
			<origin>0 0</origin>
			<pos>0.03 0.5</pos>
			<lineSpacing>1.1</lineSpacing>
			<fontSize>0.02</fontSize> 
			<fontPath>${fontRegular}</fontPath>
			<systemdata>gamecount</systemdata>
			<letterCase>capitalize</letterCase>
			<color>${fgColor}</color>
		</text>
		<image name="lineUpperLeft">
			<pos>0.0 0.6</pos>
			<size>0.2 0.002</size>
			<origin>0 0</origin>
			<path>./_inc/images/Left_Line.png</path>
			<color>838383</color>
			<zIndex>11</zIndex>
		</image>
		<image name="lineLowerLeft">
			<pos>0.0 0.86</pos>
			<size>0.15 0.002</size>
			<origin>0 0</origin>
			<path>./_inc/images/Left_Line.png</path>
			<color>838383</color>
			<zIndex>11</zIndex>
		</image>
		<image name="lineUpperRight">
			<pos>1 0.6</pos>
			<size>0.2 0.002</size>
			<origin>1 0</origin>
			<path>./_inc/images/Right_Line.png</path>
			<color>838383</color>
			<zIndex>11</zIndex>
		</image>
		<image name="lineLowerRight">
			<pos>1 0.86</pos>
			<size>0.15 0.002</size>
			<origin>1 0</origin>
			<path>./_inc/images/Right_Line.png</path>
			<color>838383</color>
			<zIndex>11</zIndex>
		</image>
	</view>
	<!--
	///
	System View: Background
	///
	-->
	<variant name="gamelist-grid-small-classic,gamelist-grid-large-classic">
		<view name="system">
			<image name="cover_list">
				<origin>0 0</origin>
				<pos>0 0</pos>
				<size>1 1</size>
				<default>./_inc/systems/${artworkFolder}/_default.jpg</default>
				<path>./_inc/systems/${artworkFolder}/${system.theme}.jpg</path>
				<zIndex>1</zIndex>
			</image>
		</view>
	</variant>
	<!--
	///
	Gamelist View: Grid
	///
	-->
	<variant name="gamelist-grid-small-classic,gamelist-grid-large-classic">
		<view name="gamelist">
			<image name="cover_list">
				<origin>0 0</origin>
				<pos>0 0</pos>
				<cropSize>1 0.7</cropSize>
				<zIndex>1</zIndex>
			</image>
			<text name="logoText">
				<origin>0 0.5</origin>
				<pos>0.033333 0.078125</pos>
				<fontSize>${fontSizeH2}</fontSize> 
				<fontPath>${fontBold}</fontPath>
				<metadata>systemFullname</metadata>
				<letterCase>none</letterCase>
				<color>${fgColor}</color>
			</text>
			<text name="md_name">
				<origin>0 0.5</origin> 
				<pos>0.033333 0.14375</pos>	
				<size>0.9 ${fontSizeBody}</size>				
				<fontSize>${fontSizeBody}</fontSize>
				<fontPath>${fontRegular}</fontPath>
				<metadata>name</metadata>
				<color>${fgColor}</color>
				<zIndex>5</zIndex>
			</text>
			<grid name="game-grid">
				<origin>0.5 0</origin> 
				<pos>0.5 0.2</pos>	
				<size>0.933333 0.725</size>
				<itemScale>1.3</itemScale>
				<imageCornerRadius>0.01</imageCornerRadius> 
				<scaleInwards>true</scaleInwards>
				<unfocusedItemDimming>0.8</unfocusedItemDimming>
				<unfocusedItemSaturation >0.8</unfocusedItemSaturation >
				<fontSize>${fontSizeCaption}</fontSize>
				<textColor>${fgColor}</textColor>
				<textRelativeScale>1</textRelativeScale>
				<textBackgroundColor>${fgColor}0D</textBackgroundColor>
			</grid>
		</view>
	</variant>
	<!--
	///
	Gamelist View: CoverGrid
	///
	-->
	<variant name="gamelist-grid-small-classic,gamelist-grid-large-classic">
		<include>./_inc/systems/coversizeGrid/${systemCoverSize}.xml</include>
		<view name="gamelist">
			<grid name="game-grid">
				<imageType>cover</imageType>
			</grid>
		</view>
	</variant>
	<!--
	///
	Gamelist View: Background
	///
	-->
	<variant name="gamelist-grid-small-classic,gamelist-grid-large-classic">
		<view name="gamelist">
			<image name="cover_list">
				<default>./_inc/systems/${artworkFolder}/_default.jpg</default>
				<path>./_inc/systems/${artworkFolder}/${system.theme}.jpg</path>
				<size>1.5 1.5</size>
				<pos>-0.25 0</pos>
				<opacity>0.3</opacity>
			</image>
		</view>
	</variant>
	<!--
	///
	Font Size
	///
	-->
	<fontSize name="small">
		<variables>
			<fontSizeH1>0.05625</fontSizeH1> 
			<fontSizeH2>0.04375</fontSizeH2> 
			<fontSizeH3>0.0375</fontSizeH3> 
			<fontSizeBody>0.03</fontSizeBody> 
			<fontSizeCaption>0.028125</fontSizeCaption> 
		</variables>
	</fontSize>
	<fontSize name="medium">
		<variables>
			<fontSizeH1>0.0625</fontSizeH1> 
			<fontSizeH2>0.05</fontSizeH2> 
			<fontSizeH3>0.04375</fontSizeH3> 
			<fontSizeBody>0.0375</fontSizeBody> 
			<fontSizeCaption>0.028125</fontSizeCaption> 
		</variables>
	</fontSize>
	<fontSize name="large">
		<variables>
			<fontSizeH1>0.06875</fontSizeH1> 
			<fontSizeH2>0.05625</fontSizeH2> 
			<fontSizeH3>0.046875</fontSizeH3> 
			<fontSizeBody>0.040625</fontSizeBody> 
			<fontSizeCaption>0.03125</fontSizeCaption> 
		</variables>
	</fontSize>
	<!--
	///
	Aspect Ratios
	///
	-->
	<aspectRatio name="4:3">
		<include>./aspect-ratio-4-3.xml</include>
	</aspectRatio>
	
</theme>
